{% extends 'base.html.twig' %} {% block title %}Gallery{% endblock %} {% block body %}
<main class="container">

  <div class="row">
    <div class="col-5 d-flex align-items-center">
      <a class="btn btn-primary" href="{{ path('app_gallery_new') }}">Adaugă imagine nouă</a>
    </div>
    <h1 class="ml-4">Galerie imagini</h1>
  </div>

  <div class="row mt-5">
    {% for image in images %}
    <div class="col-4 col-lg-3">
      {{ include('gallery/_image_card.html.twig') }}
      <div id="view-picture-{{ image.id }}" class="modal">
        <div class="inner-view-picture">
          <img class="modal-image" src="data:image/png;base64,{{ image.source }}" alt="{{ image.title }}">
          <div class="d-flex">
            <div>
              {{ include('gallery/_delete_form.html.twig') }}
            </div>
            <div class="ml-2">
              {{ include('gallery/_edit_form.html.twig') }}
            </div>
        </div>
      </div>
    </div>
    {% else %}
  </div>
  {{ include('gallery/_no_images.html.twig') }}
  {% endfor %}
</main>
{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
{% endblock %}